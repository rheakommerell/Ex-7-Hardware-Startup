<MainScreen>:
    #: import s0 __main__.s0
    name: 'main'
    on_enter: root.start_speed_thread()
    FloatLayout:
        size_hint: None, None

    Slider:
        id: slider
        min: 0
        max: 525
        size_hint: 0.35, None
        step: 1
        size: 400, 30
        center_y: 900
        center_x: 300
        orientation: 'horizontal'

    DPEAButton:
        id: motor_button
        text: "motor on/off"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.off_on()

    DPEAButton:
        id: dir_button
        text: "direction"
        size: 100, 100
        x: 0.5 * root.width
        y: 0.5 * root.height
        color: 1, 0, 0, 1
        on_press: root.switch_dir()

    DPEAButton:
        id: special_butt
        text: "special"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.special()

    ImageButton:
        id: exit_image_button
        source: "../../packages/RaspberryPiCommon/pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.9
        y: root.height * 0.9
        on_press: root.exit_program()

    SelfUpdatingLabel:
        size_hint: None, None
        font_size: 30
        text: "it me"
        update_property: s0.get_position_in_units
        update_frequency: 0.1
        update_property_parameters: None
        center_x: 0.2 * root.width
        center_y: 0.2 * root.height
        color: 1, 1, 1, 1
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
